                updatedFile.name = "db/webUploads/private" + "/" + "{{ type }}" +"/" + Date.now() + "-" + (Math.floor(Math.random() * (99999999999999999999 - 9999999999 + 1)) + 9999999999) + "." + getExtension(currentFile.name);
