{% extends "assets/template.twig" %}
{% block htmlIncludes %}
{% endblock %}
{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped sticky-header">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Category</th>
                                <th>Featured articles</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for category in CATEGORIES %}
                        <tr>
                            <td>{{ category.categories_displayName }}</td>
                            <td>
                                <select id="categorySelect{{ category.categories_id }}" class="chooser form-control" multiple="multiple">
                                </select>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>
        {% for category in CATEGORIES %}
        $("#categorySelect{{ category.categories_id }}").select2({
            placeholder: "Search for a repository",
            minimumInputLength: 0,
            maximumSelectionSize: 6,
            minimumResultsForSearch: 50,
            data: [

                    ],
                    });
        {% endfor %}
    </script>

{% endblock %}